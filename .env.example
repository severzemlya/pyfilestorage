SECRET_KEY=
ADMIN_EMAIL=admin@local.host
ADMIN_PASSWORD=admin123
FLASK_DEBUG=
SESSION_COOKIE_SECURE=1
TRUST_X_FORWARDED_PROTO=0
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
FILE_ENCRYPTION_SECRET=

# Domain separation for security (XSS/session hijacking prevention)
# APP_DOMAIN: Main application domain for authenticated operations
# CONTENT_DOMAIN: Separate domain for serving uploaded files (recommended for security)
# If CONTENT_DOMAIN is not set, files are served from APP_DOMAIN
APP_DOMAIN=
CONTENT_DOMAIN=

# Upload folder path (absolute or relative to app directory)
# Can be set to a different drive/location, e.g., /mnt/storage/uploads or D:\storage\uploads
UPLOAD_FOLDER=
